#  id         :integer         not null, primary key
#  name       :string(255)
#  created_at :datetime
#  updated_at :datetime
#

require 'spec_helper'

describe Teacher do

  before(:each) do
    @attr = {
      :name => "Arnaldo Mandel"
    }
  end

  it "should create a new instance given valid attributes" do
    Teacher.create!(@attr)
  end

  it "should be in alphabetical order" do
    @te1 = Factory(:teacher, :name => "Zucchi")
    @te2 = Factory(:teacher, :name => "Arnaldo")
    @te3 = Factory(:teacher, :name => "Toledo")
    @te4 = Factory(:teacher, :name => "Lebensztajn")

    Teacher.all.should == [@te2, @te4, @te3, @te1]
  end
end

