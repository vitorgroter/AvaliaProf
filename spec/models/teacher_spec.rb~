# Table name: teachers
#
#  id         :integer         not null, primary key
#  name       :string(255)
#  created_at :datetime
#  updated_at :datetime
#

require 'spec_helper'

describe Teacher do

  before(:each) do
    @attr = {
      :name => "Arnaldo Mandel"
    }
  end

  it "should create a new instance given valid attributes" do
    Teacher.create!(@attr)
  end

  it "should be in alphabetical order" do
    @sb1 = Factory(:teacher, :name => "D")
    @sb2 = Factory(:teacher, :name => "A")
    @sb3 = Factory(:teacher, :name => "C")
    @sb4 = Factory(:teacher, :name => "B")

    Teacher.all.should == [@sb2, @sb4, @sb3, @sb1]
  end
end

