/*
 * This is a manifest file that'll automatically include all the stylesheets available in this directory
 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *= require_self
 *= require_tree . 
*/


.container {
  width: 710px;
  margin-left: auto;
  margin-right: auto;
}

@font-face {
  font-family: Graublau Sans Web;
  src: url(GraublauWeb.otf) format("opentype");
}

body {
  background: #B0C2EE;
  font-family:Verdana, Geneva, sans-serif;
  font-size: 8pt;
}

header {
  padding-top: 10px;
}

header img {
  padding: 1em;
  background: #fff;
}

section {
  margin-top: 1em;
  padding: 20px;
  background: #fff;
}

section h1 {
  font-size: 200%;
  font-family:Georgia, "Times New Roman", Times, serif;
  background-color:#ebc242;
  padding-left:5px;
  border-bottom:1px solid #C90;
  margin-top:0px;
  color:#FFF;
}

/* Links */

a {
  color:#03C;
  text-decoration: none;
}

a:hover {
  color: #0b0b9d;
  text-decoration: underline;
}

/* Navigation */

nav {
  float: right;
  background-color: #fff;
  padding: 3px 10px;
  white-space: nowrap;
}

nav ul {
  margin: 0;
  padding: 0;
}

nav ul li {
  list-style-type: none;
  display: inline-block;
  padding: 0.2em 0;
}

nav ul li a {
  padding: 0 5px;
  font-weight: bold;
}

/* Round corners */

.round {
  -moz-border-radius:    4px;
  -webkit-border-radius: 4px;
  border-radius:         4px;
}

.logo {
  background-color: #eee;
  -moz-border-radius:    4px;
  -webkit-border-radius: 4px;
  border-radius:         4px;
}

footer {
  text-align: center;
  margin-top: 10px;
  width: 710px;
  margin-left: auto;
  margin-right: auto;
}

footer nav {
  float: none;
}


/* User show page */

table.profile {
  width: 100%;
  margin-bottom: 0;
}

td.main {
  width: 70%;
  padding: 1em;
}

td.sidebar {
  width: 30%;
  padding: 1em;
  vertical-align: top;
  background: #ffc;
}

.profile img.gravatar {
  border: 1px solid #999;
  margin-bottom: -15px;
}

div.field, div.actions {
  margin-bottom: 10px;
}

.field_with_errors {
  margin-top: 10px;
  padding: 2px;
  background-color: red;
  display: table;
}

.field_with_errors label {
  color: #fff;
}

#error_explanation {
  border: 1px solid #c00;
  padding: 7px;
  background-color: #f0f0f0;
  float:right;
}

#error_explanation h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 5px 5px 15px;
  font-size: 12px;
  margin: -7px;
  background-color: red;
  color: #fff;
}

#error_explanation p {
  color: #333;
  margin-bottom: 0;
  padding: 5px;
}

#error_explanation ul li {
  font-size: 12px;
  list-style: square;
}

ul.users {
  margin-top: 1em;
}

.users li {
  list-style: none;
  /*font-family: Consolas, Lucida Console, DejaVu Sans Mono, Andale Mono, Lucida Console, Courier New, Courier, monospace;*/
  font-size: 100%;
}

div.content
{
  padding: 0px 0px 0px 12px;
}

h3.comments
{
  padding-top: 50px;
  padding-bottom: 10px;
}

table.comments td
{
  padding-bottom:20px;
}

span.nocomments
{
  color: #888;
  font-style: italic;
}

span.commentusername
{
  font-size: 18px;
}

span.commenttimestamp
{
  color: #888;
  font-style: italic;
  font-size: 80%;
}

